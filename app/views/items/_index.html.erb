
<div class = "container mt-3">
  <div class="row">

    <div class = "col-3" >

      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">ジャンル</th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <th>
                <%= link_to genre.name, items_path(genre_id: genre.id) %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>



      <div class="col-9">
        <h2>商品一覧
          (全<%= @items.count %>件）
        </h2>
<div class = "row">
          <% @items.each do |item| %>
            <div class = 'col-3'>
              <td><%= link_to item_path(item.id) do %>
                <%= image_tag item.get_image(100,100) %>
                <% end %>
              </td><br>
              <td><%= link_to item_path(item.id) do %></td>
              <%= item.name %>
            <% end %>
            <br>
            ¥<%= item.price %>
            </div>
        <% end %>
      </div>
      <%#= paginate @items %>
</div>
  </div>
</div>