<div class="container">
  <div class="row py-2">
    <div class="col">
　　　<h4>新規会員登録</h4>
　　</div>
　</div>
　<div class="row">
    <div class="col">

　　  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>


      <div class="form-group row" >
        <%= f.label :名前,class: "col-md-3" %>
        <%= f.label :（姓） %>
        <%= f.text_field :last_name, autofocus: true, class:' form-control customer-last_name col-md-3 ml-3'%>

        <%= f.label :（名） %>
        <%= f.text_field :first_name, autofocus: true, class:' form-control customer-last_name col-md-3 ml-3' %>
      </div>

      <div class="form-group row" >
        <%= f.label :フリガナ,class: "col-md-3" %>
        <%= f.label :（セイ） %>
        <%= f.text_field :last_name_kana, autofocus: true, class:' form-control customer-last_name col-md-3 ml-3' %>

        <%= f.label :（メイ） %>
        <%= f.text_field :first_name_kana, autofocus: true, class:' form-control customer-last_name col-md-3 ml-3' %>
      </div>


      <div class="form-group row" >
        <%= f.label :メールアドレス,class: "col-md-4" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:' form-control customer-last_name col-md-3 ml-3' %>
      </div>


      <div class="form-group row" >
        <%= f.label :郵便番号（ハイフンなし）,class: "col-md-4" %>
        <%= f.text_field :post_code, autofocus: true, class:' form-control customer-last_name col-md-3 ml-3' %>
      </div>

      <div class="form-group row" >
        <%= f.label :住所,class: "col-md-4" %>
        <%= f.text_field :address, autofocus: true, class:' form-control customer-last_name col-md-3 ml-3' %>
      </div>

      <div class="form-group row" >
        <%= f.label :電話番号（ハイフンなし）,class: "col-md-4" %>
        <%= f.text_field :phone, autofocus: true, class:' form-control customer-last_name col-md-3 ml-3' %>
      </div>


      <div class="form-group row" >
        <%= f.label :パスワード（6文字以上）,class: "col-md-4" %>
        <%= f.password_field :password, autocomplete: "new-password", class:' form-control customer-last_name col-md-3 ml-3' %>
      </div>

      <div class="form-group row" >
        <%= f.label :パスワード（確認用）,class: "col-md-4" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:' form-control customer-last_name col-md-3 ml-3' %>
      </div>

      <div class="actions ml-5">
        <%= f.submit "新規登録",class: "btn btn-lg btn-success mt-4 mb-3" %>
     </div>
     <% end %>
     <h5 class="font-weight-bold">既に登録済みの方</h5>
     <div><%= link_to new_customer_session_path do %>
     <h6>こちら<% end %>からログインを行ってください。</h6>

    </div>
  </div>
</div>




