
<div class = "container">

  <h1>注文履歴詳細</h1>

  <h3>注文情報</h3>

  <table class="table table-bordered">

  <thead>
  <tr>
    <th>注文日</th>

    <th>配送先</th>

    <th>支払方法</th>

  </tr>
  </thead>


  <tbody>
    <tr>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>

      <td><%= @order.address %></td>

      <td><%= @order.payment_method %></td>

    </tr>
  </tbody>
  </table>





  <h3>注文内容</h3>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品</th>

        <th>単価</th>

        <th>小計</th>
      </tr>
    </thead>


<tbody>

<% @ordered_items.each do |ordered_item| %>

    <tr>
      <td><%= ordered_item.item.name %></td>

      <td><%= ordered_item.item.price %>円</td>

      <td><%= (ordered_item.item.price*1.10).to_i %>円</td>

   </tr>

<% end %>
    </tbody>
</table>






  <h3>請求情報</h3>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>商品合計</th>

    <th>配送料</th>

    <th><strong>ご請求額</strong></th>
  </tr>
  </thead>


  <tbody>
    <tr>
      <td><%= @order.total_payment %>円</td>

      <% @order.shipping_cost = 200 %>
      <td><%= @order.shipping_cost %>円</td>

      <% @order.total_payment = @order.shipping_cost + @total_payment.to_i %>
      <td><%= @order.total_payment %>円</td>
    </tr>
  </tbody>
</table>

<%= link_to "注文履歴リストに戻る", orders_path(@order), class: "btn btn-success mb-2" %>

</div>

