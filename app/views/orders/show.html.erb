<h1>Orders#show</h1>
<p>Find me in app/views/orders/show.html.erb</p>


<div class = "container">

  <h1>注文履歴詳細</h1>

  <h3>注文情報</h3>

  <table class="table table-bordered">

  <thead>
  <tr>
    <th>注文日</th>

    <th>配送先</th>

    <th>支払方法</th>

    <th>ステータス</th>
  </tr>
  </thead>


  <tbody>
    <tr>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>

      <td><%= @order.address %></td>

      <td><%= @order.payment_method_i18n %></td>

      <td><%= @order.status_i18n %></td>
    </tr>
  </tbody>
  </table>



  <h3>請求情報</h3>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>商品合計</th>

    <th>配送料</th>

    <th><strong>ご請求額</strong></th>
  </tr>
  </thead>


  <tbody>
    <tr>
      <td><%= @total.to_i %></td>

      <% @order.shipping_cost = 800 %>
      <td><%= @order.shipping_cost %></td>

      <% @order.total_payment = @order.shipping_cost + @total.to_i %>
      <td><%= @order.total_payment %></td>
    </tr>
  </tbody>
</table>

</div>




<h3>注文内容</h3>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品</th>

        <th>単価(税込)</th>

        <th>個数</th>

        <th>小計</th>
      </tr>
    </thead>


<tbody>

<% @ordered_items.each do |ordered_item| %>

    <tr>
      <td><%= ordered_item.item.name %></td>

      <td><%= ordered_item.price %></td>

      <td><%= ordered_item.amount %></td>

      <% subtotal = (ordered_item.price*ordered_item.amount).to_i %>
      <td><%= subtotal %></td>

   </tr>

<% end %>

    </tbody>

</table>

