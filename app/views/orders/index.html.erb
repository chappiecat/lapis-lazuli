
<div class = "container mt-3" >

<h1>注文履歴一覧</h1>


<table class="table table-bordered">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
    </thead>

<tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>

      <td><%= order.address %></td>

      <td>
        <% order.ordered_items.each do |ordered_item| %>
          <%= ordered_item.item.name %><br>
        <% end %>
      </td>

      <td><%= order.total_payment %>円</td>

      <td><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-success mr-3" %></td>
    </tr>
  <% end %>
</tbody>

</table>

<%#= link_to "マイページに戻る", customer_path(@customer), class: "btn btn-success mb-4 ml-3" %>

</div>
