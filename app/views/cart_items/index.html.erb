<h1>CartItems#index</h1>
<p>Find me in app/views/cart_items/index.html.erb</p>

<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", destroy_all_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger mb-2" %>

 <table class="table table-bordered">
   <thead>
     <tr>
       <th></th>
       <th>商品名</th>
       <th>単価（税込）</th>
       <th>数量</th>
       <th>小計</th>
       <th></th>
     </tr>
   </thead>
   <tbody>
     <% @cart_items.each do |cart_item| %>
       <tr>
         <td><%= image_tag cart_item.item.get_image(100,100) %></td>
         <td><%= cart_item.item.name %></td>
         <td><%= (cart_item.item.add_tax_price ).floor %></td>
         <td>
           <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
           <%= f.select :amount, *[1..10] %>
           <%= f.submit "変更", class: "btn btn-sm btn-success" %>
           <% end %>
         </td>
         <td><%= cart_item.subtotal%></td>
         <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger mb-2" %></td>
         <% @total = @total + cart_item.subtotal %>
       </tr>
     <% end %>
   </tbody>
 </table>
 <table class="table table-bordered">
   <th>合計金額</th>
   <td><%= @total %></td>
 </table>

 <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>

<div class="text-center mt-5">
 <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
</div>
