
<div class="container">


<h1>マイページ</h1>

<td><%= link_to "登録情報編集", edit_customer_path(@customer), class: "btn btn-success mb-4 ml-3" %></td>

<td><%= link_to "出品商品一覧",   customer_items_path(current_customer), class: "btn btn-success mb-4 ml-3" %></td>

<td><%= link_to "配送先一覧", addresses_path(@customer), class: "btn btn-success mb-4 ml-3" %></td>

<td><%= link_to "注文履歴一覧", orders_path(@order), class: "btn btn-success mb-4 ml-3" %></td>



<h3>登録情報</h3>

<table class="table table-bordered">

  <tr>
    <th>氏名</th>
    <td>
      <%= @customer.last_name %>
      <%= @customer.first_name %>
    </td>
  </tr>
  <tr>
    <th>カナ</th>
    <td>
      <%= @customer.last_name_kana %>
      <%= @customer.first_name_kana %>
    </td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.post_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.phone %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>

</div>

