      <h1>新着商品</h1>

        <div class = 'row mt-4'>
          <%# @items.each do |item| %>
            <div class = 'col-3'>
              <td><%#= link_to item_path(item.id) do %>
                <%#= image_tag item.get_image(100,100) %>
              <%# end %>
              </td><br>
              <td><%#= link_to item_path(item.id) do %>
                <%#= item.name %>
              </td><br>
              <%# end %>
              ¥<%#= item.price %>
            </div>
          <%# end %>
        </div>
        <%#= link_to "全ての商品を見る>", items_path,class: 'nav-link text-right' %>




    </div>
  </div>
</div>
