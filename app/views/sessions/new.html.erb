<div class="row py-2">
    <div class="col font-weight-bold bg-light">
      <h4>ログイン</h4>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <h5 class="font-weight-bold bg-light mt-4">会員の方はこちらからログイン</h5>
        <div class="field mt-4 ml-5">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mt-3 ml-5">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions ml-5">
          <%= f.submit "ログイン", class: "btn btn-sm btn-primary mt-4 mb-3" %>
        </div>
      <% end %>

      <h5 class="font-weight-bold bg-light">会員登録がお済みでない方</h5>
        <div class="field mt-3"><%= link_to new_customer_registration_path do %>
          <h5>こちら<% end %> から新規登録を行ってください。</h5>
        </div>
    </div>
  </div>
</div>