<h1>Addresses#index</h1>
<p>Find me in app/views/addresses/index.html.erb</p>



<h1>配送先編集</h1>


<%= form_with model: @address, url: addresses_path(@address.id),method: :patch do |f| %>


  <div class="form-group row">
    <%= f.label "郵便番号",class: "col-md-2" %>
    <%= f.text_field :post_code, class: 'form-control customer-post_code col-md-3 ml-3' %>
  </div>


  <div class="form-group row">
    <%= f.label :address, "住所",class: "col-md-2" %>
    <%= f.text_field :address, class: 'form-control customer-address col-md-3 ml-3' %>
  </div>


  <div class="form-group row">
    <%= f.label :name, "宛名",class: "col-md-2" %>
    <%= f.text_field :name, class: 'form-control customer-phone col-md-3 ml-3' %>
  </div>


  <%= f.submit "変更内容を保存", class: "btn btn-sm btn-success" %>




<% end %>
