
<h1>配送先一覧画面</h1>

<%= form_with model: @address do |f| %>

<div class="form-group row">
    <%= f.label :post_code, "郵便番号",class: "col-md-2" %>
    <%= f.text_field :post_code, class: 'form-control customer-phone col-md-3 ml-3' %>
  </div>


  <div class="form-group row">
    <%= f.label :address, "住所",class: "col-md-2" %>
    <%= f.text_field :address, class: 'form-control customer-phone col-md-3 ml-3' %>
  </div>


  <div class="form-group row" style = "margin-bottom: 70px">

    <%= f.label :name, "宛名",class: "col-md-2" %>
    <%= f.text_field :name, class: 'form-control customer-phone col-md-3 ml-3' %>

    <%= f.submit "新規登録", class: "btn btn-sm btn-success", style:"margin-left: 30%" %>
  </div>



<% end %>


  <%#= link_to new_address_path do %>
    <!--<i class="fa-solid fa-plus"></i>-->
  <%# end %>

<table class="table table-bordered">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>

<tbody>
<% @addresses.each do |address| %>

    <tr>
      <td><%= address.post_code %></td>

      <td><%= address.address%></td>

      <td><%= address.name %></td>

      <td>
        <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success mr-3" %>

        <%= link_to "消去する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか?", class: "btn btn-sm btn-danger" %>
      </td>

   </tr>
<% end %>


    </tbody>

</table>
