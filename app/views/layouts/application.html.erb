<!DOCTYPE html>
<html>
  <head>
    <title>LapisLazuli</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body style="background-color:#F3FFD8;">

  <header>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #8EB8FF">
      <div class="container">

      <div class="navbar-brand p-3" href="/">
        <%= link_to root_path do %>
          <%= image_tag('yuta.png', :size =>'130x120') %>
        <% end %>
      </div>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">

      <% if customer_signed_in? %>
      <div class="mr-5 mt-3">
        <p>
          ようこそ、<%= current_customer.last_name %>さん!
        </p>
      </div>


        <div>
          <%= link_to customer_path(current_customer),class: 'nav-link text-light' do %>
            <button type="button" class="btn btn-light btn-sm mr-3">マイページ</button>
          <% end %>
        </div>


        <div>
        <%= link_to new_item_path,class: 'nav-link text-light' do %>
            <button type="button" class="btn btn-light btn-sm mr-3">出品</button>
          <% end %>
        </div>


        <div>
          <%= link_to items_path,class: 'nav-link text-light' do %>
            <button type="button" class="btn btn-light btn-sm mr-3">商品一覧</button>
          <% end %>
        </div>


        <div>
          <%= link_to cart_items_path,class: 'nav-link text-light' do %>
            <button type="button" class="btn btn-light btn-sm mr-3">カート</button>
          <% end %>
        </div>


        <div>
          <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-light' do %>
            <button type="button" class="btn btn-light btn-sm ">ログアウト</button>
          <% end %>
        </div>


      <% else %>

        <div>
        <%= link_to about_path,class: 'nav-link text-light' do  %>
        <button type="button" class="btn btn-light btn-sm mr-3">about</button>
        <% end %>
        </div>


        <!--<div>-->
          <%#= link_to items_path,class: 'nav-link text-light' do  %>
            <!--<button type="button" class="btn btn-light btn-sm mr-3">商品一覧</button>-->
          <%# end %>
        <!--</div>-->



        <div><%= link_to new_customer_registration_path,class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-light btn-sm mr-3">新規登録</button>
        <% end %>
        </div>

        <div><%= link_to new_customer_session_path,class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-light btn-sm">ログイン</button>
        <% end %>
        </div>



      <% end %>
      </ul>
      </div>
      </div>
        <div class="mr-1">
          <%= text_field_tag :search %>
          <%= submit_tag 'Search', :name => nil %>
        </div>
    </nav>
  </header>


    <div class="container">

    <%= yield %>
  </div>
  </body>
</html>
